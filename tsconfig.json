{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "ES2017", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@atoms/*": ["components/atoms/*"],
      "@molecules/*": ["components/molecules/*"],
      "@organisms/*": ["components/organisms/*"],
      "@pages/*": ["pages/*"],
      "@libs/*": ["libs/*"],
      "@services/*": ["services/*"],
      "@helpers/*": ["helpers/*"],
      "@store/*": ["store/slices/*"],
      "@store": ["store"],
      "@constants": ["constants"],
      "@types/*": ["types/*"],
      "@gentypes/*": ["types/generated/*"],
      "@hooks": ["hooks"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@hoc/*": ["hoc/*"],
      "@assets/*": ["assets/*"],
      "@apolloClient": ["apolloClient"],
      "@graphql/*": ["graphql/*"],
      "@layout/*": ["components/layout/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "theme/utils.js"],
  "exclude": ["node_modules"]
}
